@using Acme.SimpleTaskApp.Web.Startup
@using Acme.SimpleTaskApp.Products;
@using Acme.SimpleTaskApp.Web.Models.Tours
@* @using static Acme.SimpleTaskApp.Tours.Tours *@
@model Acme.SimpleTaskApp.Web.Models.Tours.TourViewModel

@{
	ViewBag.Title = L("Tours");
	ViewBag.CurrentPageName = PageNames.Tours;
}

@section scripts
{
	<environment names="Development">
		<script src="~/view-resources/Views/Tours/index.js" asp-append-version="true"></script>
	</environment>
}

<!-- Header -->
<section class="content-header">
	<div class="container-fluid">
		<div class="row">
			<div class="col-sm-6">
				<h1>@L("Tours")</h1>
			</div>
			<div class="col-sm-6">
				<a href="javascript:;" data-toggle="modal" data-target="#TourCreateModal" class="btn bg-blue float-sm-right">
					<i class="fa fa-plus-square"></i> @L("Create")
				</a>
			</div>
		</div>
	</div>
</section>

<!-- Main Content -->
<section class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-12">
				<div class="card">

					<!-- Card Header -->
					<div class="card-header">
						<div class="row">
							<div class="col-md-6">
								@await Html.PartialAsync("~/Views/Tours/SearchTour.cshtml")
							</div>
						</div>
					</div>

					<!-- Card Body -->
					<div class="card-body">
						<div class="table-responsive">
							<table id="TourTable" class="table table-striped table-bordered">
								<thead>
									<tr>
										<th>@L("TourName")</th>

										<th style="width: 100px">@L("MinGroupSize")</th>

										<th style="width: 100px">@L("MaxGroupSize")</th>

										<th>@L("TourType")</th>

										<th style="width: 150px">@L("StartDate")</th>

										<th style="width: 150px">@L("EndDate")</th>

										<th>@L("Transportation")</th>

										<th style="width: 120px">@L("TourPrice")</th>

										<th>@L("PhoneNumber")</th>

										<th style="width: 300px">@L("Description")</th>

										<th style="width: 100px">@L("Attachment")</th>

										<th style="width: 210px">@L("Actions")</th>
									</tr>
								</thead>
								<tbody></tbody>
							</table>
						</div>
					</div>

				</div> <!-- End Card -->
			</div>
		</div>
	</div>
</section>

@* <!-- Create Modal --> *@

@await Html.PartialAsync("~/Views/Tours/_CreateModal.cshtml", new CreateTourViewModel())

@* <!-- Edit Modal --> *@
<div class="modal fade" id="TourEditModal" tabindex="-1" role="dialog" aria-labelledby="ProductEditModalLabel" data-backdrop="static">
	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content"></div>
	</div>
</div>

<!-- Detail Modal -->
<div class="modal fade" id="TourDetailModal" tabindex="-1" role="dialog" aria-labelledby="ProductDetailModalLabel" data-backdrop="static">
	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content"></div>
	</div>
</div>
