@using Acme.SimpleTaskApp.Web.Startup
@using Acme.SimpleTaskApp.Products;
@using Acme.SimpleTaskApp.Web.Models.Products


@{
	ViewBag.Title = L("Orders");
	ViewBag.CurrentPageName = PageNames.Orders;
}

@section scripts
{
	<environment names="Development">
		<script src="~/view-resources/Views/Orders/index.js" asp-append-version="true"></script>
	</environment>
}
<!-- Header -->
<section class="content-header">
	<div class="container-fluid">
		<div class="row">
			<div class="col-sm-6">
				<h1>@L("Orders")</h1>
			</div>
			<div class="col-sm-6">
				<a href="javascript:;" data-toggle="modal" data-target="#OrderCreateModal" class="btn bg-blue float-sm-right">
					<i class="fa fa-plus-square"></i> @L("Create")
				</a>
			</div>
		</div>
	</div>
</section>

<!-- Main Content -->
<section class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-12">
				<div class="card">

					<!-- Card Header -->
					<div class="card-header">
						<div class="row">
							@* <div class="col-md-6 "> *@
							@* 	@await Html.PartialAsync("~/Views/Products/CategoryList.cshtml") *@
							@* </div> *@
							<div class="col-md-6">
								@await Html.PartialAsync("~/Views/Orders/Index.AdvancedSearch.cshtml")
							</div>
						</div>
					</div>

					<!-- Card Body -->
					<div class="card-body">
						<div class="table-responsive">
							<table id="OrdersTable" class="table table-striped table-bordered">
								<thead>
									<tr>
										<th>@L("Khách hàng")</th>
										<th>@L("Price")</th>
										<th style="width: 300px">@L("Thời gian đặt")</th>
										<th style="width: 100px">@L("Trạng thái")</th>
										<th style="width: 210px">@L("Actions")</th>
									</tr>
								</thead>
								<tbody></tbody>
							</table>
						</div>
					</div>

				</div> <!-- End Card -->
			</div>
		</div>
	</div>
</section>

<!-- Create Modal -->
@* @await Html.PartialAsync("~/Views/Orders/_CreateModal.cshtml") *@

<!-- Edit Modal -->
<div class="modal fade" id="OrderEditModal" tabindex="-1" role="dialog" aria-labelledby="OrderEditModalLabel" data-backdrop="static">
	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content"></div>
	</div>
</div>

<!-- Detail Modal -->
<div class="modal fade" id="OrderDetailModal" tabindex="-1" role="dialog" aria-labelledby="OrderDetailModalLabel" data-backdrop="static">
	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content"></div>
	</div>
</div>