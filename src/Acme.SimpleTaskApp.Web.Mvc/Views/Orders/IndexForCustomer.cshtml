@using Acme.SimpleTaskApp.Web.Startup
@model Acme.SimpleTaskApp.Web.Models.Orders.OrderViewModel

@{
	ViewData["Title"] = "Order";
	Layout = "~/Views/Shared/Layout/Customer/_LayoutCustomer.cshtml";
}


@section scripts
{
	<environment names="Development">
		<script src="~/view-resources/Views/Orders/IndexForCustomer.js" asp-append-version="true"></script>
	</environment>

}


<section class="content-header">
	<div class="container-fluid">
		<div class="row">
			<div class="col-sm-6">
				<h1>@L("Orders")</h1>
			</div>
		</div>
	</div>
</section>
<section class="content">
	<div class="container-fluid">
		<div class="row" style="padding: 100px 300px 0 300px;">
			<div class="col-12">
				@await Html.PartialAsync("~/Views/Orders/IndexForUser.AdvancedSearch.cshtml")
				<div class="card">
					<div class="card-header">
						<div class="row">
							<div class="col-md-6">
							</div>
						</div>
					</div>
					<div class="card-body">
						<div class="table-responsive">
							<table id="OrdersTable" class="table table-striped table-bordered">
								<thead>
									<tr>
										<th style="width: 90px">@L("UserName")</th>
										<th style="width: 150px">@L("FullName")</th>
										<th style="width: 200px">@L("TotalAmount")</th>
										<th style="width: 170px">@L("PaymentMethod")</th>
										<th style="width: 120px">@L("CreationTime")</th>
										<th>@L("Status")</th>
										<th style="width: 230px">@L("Actions")</th>
									</tr>
								</thead>
								<tbody>
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<div class="modal fade" id="OrderEditModal" tabindex="-1" role="dialog" aria-labelledby="OrderEditModalLabel" data-backdrop="static">
	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content">
		</div>
	</div>
</div>


<div class="modal fade" id="OrderDetailModal" tabindex="-1" role="dialog" aria-labelledby="OrderDetailModalLabel" data-backdrop="static">
	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content"></div>
	</div>
</div>






