<div class="container-fluid fixed-top shadow bg-white">
	<nav class="navbar navbar-light navbar-expand-xl w-100">
		<!-- Logo -->
		<a asp-controller="HomeCustomer" asp-action="Index" class="navbar-brand">
			<h1 class="text-primary display-6">Shop Ecommer</h1>
		</a>

		<!-- Thanh tìm kiếm -->
		<div class="d-flex align-items-center me-3">
			<input class="form-control txt-search" name="Keyword" type="text" placeholder="Bạn tìm gì?">
			<button class="btn" id="searchButton">
				<i class="fas fa-search text-success"></i>
			</button>
		</div>

		<!-- Nút toggle menu -->
		<button class="navbar-toggler py-2 px-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
			<span class="fa fa-bars text-primary"></span>
		</button>

		<!-- Nội dung menu -->
		<div class="collapse navbar-collapse w-100" id="navbarCollapse">
			<div class="navbar-nav mx-auto">
				<a asp-controller="HomeCustomer" asp-action="Index" class="nav-item nav-link active">Home</a>
				<div class="nav-item dropdown">
					<a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Pages</a>
					<div class="dropdown-menu m-0 bg-secondary rounded-0">
						<a href="cart.html" class="dropdown-item">Cart</a>
						<a href="checkout.html" class="dropdown-item">Checkout</a>
						<a href="testimonial.html" class="dropdown-item">Testimonial</a>
						<a href="404.html" class="dropdown-item">404 Page</a>
					</div>
				</div>
				<a href="contact.html" class="nav-item nav-link">Contact</a>
			</div>

			<!-- Giỏ hàng và Đăng nhập -->
			<div class="d-flex align-items-center cart-login">
				<!-- Giỏ hàng -->
				<!-- Đăng nhập -->
				@await Component.InvokeAsync("CartMenu")
				@await Component.InvokeAsync("User")
			</div>
		</div>
	</nav>
	@await Component.InvokeAsync("CategoryList", new { viewName = "CategoryListIndex" })

</div>

<style>
	/* Thanh tìm kiếm */
	.txt-search {
		font-size: 14px;
		border: 2px solid #f0ad4e;
		border-radius: 50px;
		padding: 8px 12px;
		width: 180px;
		outline: none;
		transition: border-color 0.3s ease;
	}

		.txt-search:focus {
			border-color: #ffc107;
		}

	#searchButton {
		border: 2px solid #f0ad4e;
		width: 40px;
		height: 40px;
		border-radius: 50%;
		display: flex;
		justify-content: center;
		align-items: center;
		transition: background-color 0.3s ease;
	}

		#searchButton:hover {
			background-color: #f8f9fa;
		}

	/* Navbar */
	.navbar {
		padding: 8px 16px;
	}

	/* Logo */
	.navbar-brand h1 {
		padding-left: 192px;
		font-size: 26px;
		margin: 0;
	}

	/* Căn chỉnh giỏ hàng và đăng nhập */
	.nav-link {
		font-size: 16px;
		color: #333;
		display: flex;
		align-items: center;
	}

		.nav-link i {
			font-size: 24px;
		}

	.badge {
		font-size: 12px;
		padding: 3px 6px;
	}

	.cart-login {
		padding-right: 180px;
	}

</style>