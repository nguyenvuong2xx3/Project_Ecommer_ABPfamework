@using Acme.SimpleTaskApp.Web.Models.Common.Modals
@using Acme.SimpleTaskApp.Web.Models.Categories
@model CategoryViewModel

@{
	Layout = null;
}

<div class="modal fade" id="CategoryCreateModal" tabindex="-1" role="dialog" aria-labelledby="CategoryCreateModalLabel" data-backdrop="static">
	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content">
			@await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateNewCategory")))

			<form name="pCreateForm" role="form" class="form-horizontal">
				<div class="modal-body">
					<div class="row mb-3">
						<label class="col-md-3 col-form-label fw-bold">@L("CategoryName")</label>
						<div class="col-md-9">
							<input type="text" class="form-control" name="Name" required maxlength="256" minlength="10" placeholder="Nhập tên danh mục..">
						</div>
					</div>

					<div class="row mb-3">
						<label class="col-md-3 col-form-label fw-bold">@L("Description")</label>
						<div class="col-md-9">
							<textarea class="form-control" name="Description" required maxlength="500" minlength="10" rows="3" placeholder="Nhập mô tả danh mục..."></textarea>
						</div>
					</div>
				</div>

				@await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
			</form>
		</div>
	</div>
</div>
