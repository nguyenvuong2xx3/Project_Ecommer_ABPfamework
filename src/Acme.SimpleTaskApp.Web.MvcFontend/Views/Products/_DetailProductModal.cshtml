@using Acme.SimpleTaskApp.Web.Models.Common.Modals
@using Acme.SimpleTaskApp.Web.Models.Products
@model DetailProductModalViewModel

@await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("ProductDetails")))

<div class="modal-body">
    <!-- Các trường dữ liệu sản phẩm -->
    <div class="form-group row">
        <label class="col-md-3 col-form-label">@L("Name")</label>
        <div class="col-md-9">
            <p class="form-control-plaintext">@Model.Product.Name</p>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">@L("Description")</label>
        <div class="col-md-9">
            <p class="form-control-plaintext">@Model.Product.Description</p>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">@L("Price")</label>
        <div class="col-md-9">
            <p class="form-control-plaintext">@Model.Product.Price.ToString("0")</p>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-9">
            <img src="@Model.Product.Image" alt="Ảnh sản phẩm" class="img-thumbnail d-block mx-auto" width="400" height="400" style="object-fit: cover;">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">@L("State")</label>
        <div class="col-md-9">
            @switch ((int)@Model.Product.State)
            {
                case 0:
                    <span class="badge bg-success">Còn hàng</span>
                    break;
                case 1:
                    <span class="badge bg-warning">Hết hàng</span>
                    break;
            }
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">@L("Category")</label>
        <div class="col-md-9">
      @if (Model.Product.CategoryId != null || Model.Category.Name != null)
          {
        <p class="form-control-plaintext">@Model.Category.Name</p>
          }
          else
          {
            <p class="form-control-plaintext">@L("NoCategory")</p>
          }

        </div>
    </div>
</div>